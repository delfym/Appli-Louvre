
<div class="well form-group">

    {{ form_start(form, {'attr': {'class': 'form-horizontal form-group-row'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}


    <div class="mb-5 myForm">

        <div class="form-inline mt-5 pb-5 selectQty show">

            {{ form_label(form.ticketsQuantity, "Nombre de billets souhaités",
                {'label_attr': {'class': 'selectQuantity ml-3 pr-2 '}}) }}
            {{ form_widget(form.ticketsQuantity,
                {'attr': {'id': 'add-ticket'}} ) }}

            {{ form_errors(form.ticketsQuantity) }}

        </div>

        <div class="mt-3 mb-5 form-group prototype-ticket">

                {% set prototype_ticket = form.tickets.vars.prototype %}

            <fieldset class="border mb-4 ticketField">

                <h5 class="ml-3 pr-2 mb-3 mt-3 ticket_name" id="ticket_name">Billet n°1</h5>

                {{ form_errors(form.tickets) }}
            <div class="form-inline">
                {{ form_label(prototype_ticket.ticketDate, "Date de votre visite",
                    {'label_attr': {'class': 'ml-2 pr-2 col-lg-2'}}) }}
                {{ form_widget(prototype_ticket.ticketDate,
                    {'attr': {'class': 'datepicker mb-2 col-lg-3 col-sm-12'}}) }}
                {{ form_errors(prototype_ticket.ticketDate) }}

                {{ form_label(prototype_ticket.ticketType, "Type de billet",
                    {'label_attr': {'class': 'ml-1 pr-2 col-lg-3 '}}) }}
                {{ form_widget(prototype_ticket.ticketType,
                    {'attr': {'class': 'mb-3 col-lg-3 col-sm-12'}}) }}
                {{ form_errors(prototype_ticket.ticketType) }}
            </div>

            <span class="form-inline">
                {{ form_label(prototype_ticket.visitor.firstName, "Votre prénom",
                    {'label_attr': {'class': 'ml-2 pr-2 col-lg-2'}}) }}
                {{ form_widget(prototype_ticket.visitor.firstName,
                    {'attr': {'class': 'mb-3 col-3 col-sm-12 col-lg-3'}}) }}
                {{ form_errors(prototype_ticket.visitor.firstName) }}

                {{ form_label(prototype_ticket.visitor.name, "Votre nom",
                    {'label_attr': {'class': 'ml-1 pr-2 col-lg-3'}}) }}
                {{ form_widget(prototype_ticket.visitor.name,
                    {'attr': {'class': 'mb-3 col-sm-12 col-lg-3'}}) }}
                {{ form_errors(prototype_ticket.visitor.name) }}
            </span>
            <span class="form-inline">
                    {{ form_label(prototype_ticket.visitor.birthDate, "Votre date de naissance",
                        {'label_attr': {'class': 'ml-1 pr-2 col-lg-2'}}) }}
                    {{ form_widget(prototype_ticket.visitor.birthDate,
                        {'attr': {'class': 'mb-3 col-sm-4 col-lg-4 col-sm-12'}}) }}
                    {{ form_errors(prototype_ticket.visitor.birthDate) }}

                    {{ form_label(prototype_ticket.visitor.country, "Votre pays",
                        {'label_attr': {'class': 'col-lg-2 pl-1'}}) }}
                    {{ form_widget(prototype_ticket.visitor.country,
                        {'attr': {'class': 'mb-3 col-lg-3 col-sm-12'}}) }}
                    {{ form_errors(prototype_ticket.visitor.country) }}
            </span>
            <span class="form-inline">
                {{ form_label(prototype_ticket.visitor.email, "Votre e-mail",
                    {'label_attr': {'class': 'col-lg-2 pl-1'}}) }}
                {{ form_widget(prototype_ticket.visitor.email,
                    {'attr': {'class': 'mb-3 col-lg-5 col-sm-12'}}) }}
                {{ form_errors(prototype_ticket.visitor.email) }}
            </span>
            <span class="form-inline">
            {{ form_label(prototype_ticket.price, "Prix de votre ticket",
                {'label_attr': {'class': 'ml-1 pr-5 col-lg-3'}}) }}
            {{ form_widget(prototype_ticket.price,
                {'attr': {'class': 'mb-3 mr-4 col-sm-4 col-lg-2 col-sm-12'}}) }}
            {{ form_errors(prototype_ticket.price) }}
               PRIX DU TICKET :

           {{ form_label(prototype_ticket.reduction, "Tarif réduit",
                {'label_attr': {'class': 'ml-1 col-lg-2'}}) }}
            {{ form_widget(prototype_ticket.reduction,
              {'attr': {'class': 'mb-3 col-sm-1 col-lg-1 col-sm-12'}}) }}
            {{ form_errors(prototype_ticket.price) }}
            </span>

            </fieldset>

        </div>
    </div>

    <section id="container-ticket" class="container-ticket">
    </section>

    <div class="border">
        <h5 class="mb-4 mt-3">Données de facturation</h5>

        {# Idem pour un autre champ. #}
        <span class="form-inline mb-3">

            {{ form_label(form.visitor.firstName, "Votre prénom",
                {'label_attr': {'class': 'ml-2 pr-2 col-lg-2'}}) }}
            {{ form_errors(form.visitor.firstName) }}
            {{ form_widget(form.visitor.firstName,
                {'attr': {'class': 'mb-3 col-lg-3 col-sm-12'}}) }}

            {{ form_label(form.visitor.name, "Votre nom",
                {'label_attr': {'class': 'ml-1 pr-2 col-lg-3'}}) }}
            {{ form_errors(form.visitor.name) }}
            {{ form_widget(form.visitor.name,
                {'attr': {'class': 'mb-3 col-lg-3 col-sm-12'}}) }}
        </span>

        <span class="form-inline mb-3">
            {# {% if orderOfTickets.amount != null %}
                Total de votre commande : {{ orderOfTickets.amount }}#}
        </span>

        {# Génération du label. #}
        <span class="form-inline mb-3">
            {{ form_label(form.visitor.birthDate, "Votre date de naissance",
                {'label_attr': {'class': 'ml-1 pr-2 col-lg-2'}}) }}
            {{ form_widget(form.visitor.birthDate,
            {'attr': {'class': 'mb-3 col-sm-12 col-lg-4'}}) }}
            {# Affichage des erreurs pour ce champ précis. #}

            {{ form_errors(form.visitor.birthDate) }}

            {{ form_label(form.visitor.email, "E-mail",
                {'label_attr': {'class': 'col-lg-2'}}) }}
            {{ form_widget(form.visitor.email,
                {'attr': {'class': 'mb-3 col-lg-3 col-sm-12'}}) }}
            {{ form_errors(form.visitor.email) }}
        </span>

    </div>

    {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary m-2'}}) }}

    <div class="invisible">
        {{ form_rest(form)}}
        {{ form_end(form) }}
    </div>
</div>